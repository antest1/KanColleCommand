<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_base"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding="4dp">

        <!-- アプリ画像 -->
        <com.dmm.asdk.core.ui.ExpandableHeightImageView
            android:id="@+id/gridItemAppImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>

        <!-- アプリ名 -->
        <TextView
            android:id="@+id/gridItemAppName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/txt_simpletext_base" />
    </LinearLayout>

    <!-- Newアイコン -->
    <ImageView
        android:id="@+id/icon_new"
        android:src="@drawable/ico_new"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp" />

</RelativeLayout>